			panel1.add(id_textf);
			panel1.add(libelle_textf);
			panel1.add(description_textf);
			panel1.add(prixunit_textf);
			panel1.add(quantite_textf);
			panel1.add(dateperemp_textf);
			
			panel1.add(ajout_button);
